<Window x:Class="HomeWork.pages.AddForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Student" Height="270" Width="330">
    <Grid HorizontalAlignment="Center" Width="330" Margin="0,26,0,-26">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="39*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Full Name:" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FullNameTextBox" Text="{Binding FullName}" HorizontalAlignment="Left" Margin="120,20,0,0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="2"/>

        <Label Content="Email:" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="EmailTextBox" Text="{Binding Email}" HorizontalAlignment="Left" Margin="120,60,0,0" VerticalAlignment="Top" Width="180" Grid.ColumnSpan="2"/>

        <Button Content="Action" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="120,100,0,0" Click="AddStudent_Click" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
